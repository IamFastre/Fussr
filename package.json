{
	"name": "fussr",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check:*": "npm run check:ts && npm run check:sv",
		"check:ts": "tsc --noEmit",
		"check:ts-watch": "tsc --noEmit --watch",
		"check:sv": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:sv-watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"db:migration": "supabase migration new",
		"db:diff": "supabase db diff -s extension,public,auth -f",
		"db:push": "supabase db push && supabase config push",
		"db:types": "supabase gen types --lang=typescript --linked > ./src/lib/supabase/types.ts"
	},
	"devDependencies": {
		"@inlang/paraglide-js": "2.5.0",
		"@sveltejs/adapter-auto": "^6.1.0",
		"@sveltejs/kit": "^2.43.2",
		"@sveltejs/vite-plugin-svelte": "^6.2.0",
		"@types/node": "^24.6.2",
		"sass-embedded": "^1.93.2",
		"svelte": "^5.39.5",
		"svelte-check": "^4.3.2",
		"typescript": "^5.9.2",
		"vite": "^7.1.7"
	},
	"dependencies": {
		"@lucide/svelte": "^0.552.0",
		"@supabase/ssr": "^0.7.0",
		"@supabase/supabase-js": "^2.84.0",
		"@tanstack/svelte-query": "^6.0.8",
		"dayjs": "^1.11.19",
		"lodash": "^4.17.21",
		"titchy": "^0.0.36",
		"zod": "^4.1.12"
	}
}
